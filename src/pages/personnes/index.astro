---
import LinkPersonne from "../../components/LinkPersonne.astro";
import Layout from "../../layouts/Layout.astro";
const personnes = await Astro.locals.pb.collection("Personne").getFullList();
---

<Layout titre="Artistes">
    <div class="mb-10">
        <h1 class="text-4xl font-bold mb-2 text-slate-900">Artistes</h1>
        <p class="text-slate-600">{personnes.length} personnalit√©s</p>
    </div>
    <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6"
    >
        {
            personnes.map((personne) => (
                <LinkPersonne personne={personne} />
            ))
        }
    </div>
    {Astro.locals.pb.authStore.isValid && (
        <a 
            href="/personnes/edit" 
            class="inline-flex items-center gap-2 mt-8 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all"
        >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Ajouter une nouvelle personne
        </a>
    )}
</Layout>
